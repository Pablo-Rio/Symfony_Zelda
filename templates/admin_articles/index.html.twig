{% extends 'base.html.twig' %}

{% block title %}Administrateur{% endblock %}

{% block body %}
    <h1>Articles index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Auteur</th>
                <th>Image</th>
                <th>Title</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.user}} </td>
                <td>
                    <img src= {{ asset('uploads/' ~ article.imageFile) }} alt="" height="100px" width="auto">
                </td>
                <td>{{ article.title }}</td>
                <td>{{ article.description }}</td>
                <td>
                    <a href="{{ path('app_admin_articles_show', {'id': article.id}) }}">show</a>
                    {{ include('admin_articles/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun article trouv√©</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
