{% extends 'base.html.twig' %}

{% block title %}Articles{% endblock %}

{% block body %}
    <h1>Articles</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>
                    <img src= {{ asset('uploads/' ~ article.imageFile) }} alt="" height="100px" width="auto">
                </td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ article.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ article.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_articles_index') }}">back to list</a>

    <a href="{{ path('app_admin_articles_edit', {'id': article.id}) }}">edit</a>

    {{ include('admin_articles/_delete_form.html.twig') }}
{% endblock %}
