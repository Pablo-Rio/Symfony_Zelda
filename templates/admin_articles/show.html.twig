{% extends 'base.html.twig' %}

{% block title %}Administrateur{% endblock %}

{% block body %}
    <style>
        body {height: 100%; margin-top: 120px;}
        .container>img {
            height: 300px;
            margin: 0 auto;
            display: block;
            width: auto;
        }
        header {margin-top: -120px;}


        #border {
            border: 4px solid #B99F65;
            border-radius: 8px;
            position: absolute;
            z-index: 1;
            height: 394px;
            width: 793px;
        }

        .icones {
            display: flex;
            justify-content: flex-end;
        }

        #titleRow {
            display: flex;
            justify-content: space-between;
        }

        h1 {
            font-size: 50px;
            font-weight: bold;
        }

    </style>
    <script>
        tinymce.init({
            selector: 'textarea',
            body_class: 'tinyTextarea',

            content_style:
                "body {background-color: #130204; color: white;}",


            elementpath: false,
            menubar : false,
            toolbar: false,
            statusbar: false,
        });
    </script>
    <header>
        <a href={{ path('home') }}><img alt="logo" src={{ asset("media/Logo.png") }}></a>
        <nav>
            <ul>
                <li><a href={{ path('app_reader_article_index') }}>Articles</a></li>
                {% if app.user %}
                    <li><a href={{ path('app_profile_articles_index') }}>Mes articles</a></li>
                    <li><a href={{ path('app_profile_articles_index') }}>Contact</a></li>
                    <li><a href={{ path('app_profile_show') }}>Profil</a></li>
                {% else %}
                    <li><a href={{ path('app_profile_articles_index') }}>Contact</a></li>
                    <li><a href={{ path('app_login') }}>Se connecter</a></li>
                {% endif %}

            </ul>
        </nav>
    </header>
    <div class="container">
        <img alt='' src= {{ asset('uploads/' ~ article.imageFile) }}>


        <div id="titleRow">
            <h1>{{ article.title }}</h1>
            <div class="icones">
               {{ include('profile_articles/_delete_form.html.twig') }}
            </div>
        </div>
        <div id="border"></div>
        <label>
            <textarea>{{ article.description }}</textarea>
        </label>
    </div>

{% endblock %}
