{% extends 'base.html.twig' %}

{% block title %}The Legend Of Zelda: The Great Forum{% endblock %}

{% block body %}
    <style>
        .container {
            margin: 1em auto;
            max-width: 1050px;
        }
    </style>
    {{ include('tool/headerBig.html.twig') }}
    <div class="container">
        <h1>Écrire un nouvel article <a href="{{ path('app_profile_articles_new') }}">ici</a>.</h1>

        <h1>Liste de mes articles</h1>
        <div class="containerArticles">
            {% for article in articles %}
                <a href="/profile/articles/{{ article.id }}">
                    <div class="carteArticle">
                        <img class="imageArticle" alt='' src= {{ asset('uploads/' ~ article.imageFile) }}>
                        <div class="containerTexteArticle">
                            <h3 class="titreArticle">{{ article.title }}</h3>
                        </div>
                    </div>
                </a>
            {% else %}
                <p>Aucun article trouvé. Créez-en un dès maintenant !</p>
            {% endfor %}
        </div>
    </div>
    {{ include('tool/footer.html.twig') }}
{% endblock %}
