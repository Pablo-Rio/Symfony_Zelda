{% extends 'base.html.twig' %}

{% block title %}The Legend Of Zelda: The Great Forum{% endblock %}

{% block body %}
    <style>
        .container {
            margin: 1em auto;
            max-width: 1050px;
        }
    </style>
    <header>
        <a href={{ path('home') }}><img src={{ asset("media/Logo.png") }}></a>
        <nav>
            <ul>
                <li><a href={{ path('app_reader_article_index') }}>Articles</a></li>
                {% if app.user %}
                    <li><a href={{ path('app_profile_articles_index') }}>Mes articles</a></li>
                    <li><a href={{ path('app_profile_articles_index') }}>Contact</a></li>
                    <li><a href={{ path('app_profile_show') }}>Profil</a></li>
                {% else %}
                    <li><a href={{ path('app_profile_articles_index') }}>Contact</a></li>
                    <li><a href={{ path('app_login') }}>Se connecter</a></li>
                {% endif %}
            </ul>
        </nav>
    </header>
    <div class="container">
        <h1>Écrire un nouvel article <a href="{{ path('app_profile_articles_new') }}">ici</a>.</h1>

        <h1>Liste de mes articles</h1>
        <div class="containerArticles">
            {% for article in articles %}
                <a href="/article/{{ article.id }}">
                    <div class="carteArticle">
                        <img class="imageArticle" alt='' src= {{ asset('uploads/' ~ article.imageFile) }}>
                        <div class="containerTexteArticle">
                            <h3 class="titreArticle">{{ article.title }}</h3>
                            <p class="auteurArticle">{{ article.user }}</p>
                        </div>
                    </div>
                </a>
            {% else %}
                <p>Aucun article trouvé. Créez-en un dès maintenant !</p>
            {% endfor %}
        </div>
    </div>
{% endblock %}
