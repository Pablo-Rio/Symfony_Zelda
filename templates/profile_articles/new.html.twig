{% extends 'base.html.twig' %}

{% block title %}New Articles{% endblock %}

{% block body %}
    <style>
         body {
             height: 100%;
         }

        a {
            text-decoration: none;
            color: rgb(98, 168, 229);
        }

        a:hover {
            color: rgb(98, 168, 229);
            text-decoration: underline;
        }

        .container {
            margin: 1em auto;
            color: black;
            width: 60%;
            background-color: white;
            border-radius: 7px;
            padding: 35px;

        }

        h1 {
            text-align: center;
            font-size: 25px;
            font-weight: bold;
        }


        #articles_title {
            margin-bottom: 20px;
            width: 97%;
            height: 38px;
            border-radius: 5px;
            border: 1.8px solid rgb(0,0,0,0.08);
            padding-left: 10px;
            background-color: white;
            font-size: 16px;
        }

        input:focus {
            outline:  none;
        }

        button {
            margin: 5px 25%;
            width: 50%;
            height: 45px;
            border-radius: 5px;
            border: 1px solid white;
            padding-left: 10px;
            background-color: rgb(98, 168, 229);
            font-weight: bold;
            font-size: 16px;
        }

        button:hover {
            background-color: rgb(104, 179, 237);
        }

        textarea {
            position: static;
        }

        li {
            color: red;
        }
    </style>
    <header>
        <a href={{ path('home') }}><img src={{ asset("media/Logo.png") }}></a>
        <nav>
            <ul>
                <li><a href={{ path('app_reader_article_index') }}>Articles</a></li>
                {% if app.user %}
                    <li><a href={{ path('app_profile_articles_index') }}>Mes articles</a></li>
                    <li><a href={{ path('app_profile_articles_index') }}>Contact</a></li>
                    <li><a href={{ path('app_profile_show') }}>Profil</a></li>
                {% else %}
                    <li><a href={{ path('app_profile_articles_index') }}>Contact</a></li>
                    <li><a href={{ path('app_login') }}>Se connecter</a></li>
                {% endif %}
            </ul>
        </nav>
    </header>
    <div class="container">
        <h1>Ã‰crire un nouvel article</h1>

        {{ include('profile_articles/_form.html.twig') }}

    </div>
{% endblock %}
