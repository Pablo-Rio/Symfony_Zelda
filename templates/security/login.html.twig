{% extends 'base.html.twig' %}


{% block title %}The Legend Of Zelda: The Great Forum{% endblock %}

{% block body %}
    <style>
        body {
            height: 100%;
        }

        a {
            text-decoration: none;
            color: rgb(98, 168, 229);
        }

        a:hover {
            color: rgb(98, 168, 229);
            text-decoration: underline;
        }

        .container {
            margin-top: 47vh;
            transform: translateY(-50%);
            color: black;
            width: 32%;
            background-color: white;
            border-radius: 7px;
            padding: 35px;

        }

        h1 {
            text-align: center;
            font-size: 25px;
            font-weight: bold;
        }

        form {
            font-size: 15px;
        }

        form>label {
            font: 16px/1.8 sans-serif;
            font-weight: bold;
            margin-top: 10px ;
        }

        input {
            margin-bottom: 20px;
            width: 97%;
            height: 38px;
            border-radius: 5px;
            border: 1px solid white;
            padding-left: 10px;
            background-color: rgb(0,0,0,0.1);
            font-size: 16px;
        }

        input:focus {
            outline:  none;
        }

        button {
            margin: 5px 0px;
            width: 100%;
            height: 45px;
            border-radius: 5px;
            border: 1px solid white;
            padding-left: 10px;
            background-color: rgb(98, 168, 229);
            font-weight: bold;
            font-size: 16px;
        }

        button:hover {
            background-color: rgb(104, 179, 237);
        }

    </style>

    <div class="container">
        <form method="post">
            {% if app.user %}
                <div class="mb-3">
                    Vous êtes connecté en tant que {{ app.user.getusername() }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
                </div>
            {% endif %}

            <h1>Se connecter</h1>
            {% if error %}
                <div class="alert alert-danger">E-mail ou mot de passe invalide.</div>
            {% endif %}

            <label for="inputEmail">E-MAIL *</label><br>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus><br>
            <label for="inputPassword">MOT DE PASSE *</label><br>
            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required><br>

            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >

            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
            #}

            <button class="btn btn-lg btn-primary" type="submit">
                Connexion
            </button><br>
            Pas encore de compte ? <a href="register">S'inscrire</a>
        </form>
    </div>
{% endblock %}
